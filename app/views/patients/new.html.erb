<h2>New Patient</h2>

<ol>

<%= form_for @patient do |f| %>
  <li>Name<%= f.text_field :name %></li>
  <li>MRN<%= f.text_field :mrn %></li>
  <li>Age<%= f.text_field :age %></li>
  <li>Sex<%= f.text_field :sex %></li>
  <li>Insurance Status<%= f.text_field :insurance %></li>
  <li>Smoking status (true or false)<%= f.text_field :smoker %></li>
  <li>Past Surgeries (true or false)<%= f.text_field :surgery %></li>
  <%= f.submit %>
<% end %>
</ol>
