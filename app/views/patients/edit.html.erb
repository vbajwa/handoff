<h1>Edit Patient Information</h1>

<ul>
<%= form_for @patient do |f| %>
  <li><%= f.label :name %> <%= f.text_field :name %></li>
  <li><%= f.label :mrn %> <%= f.text_field :mrn %></li>
  <li><%= f.label :age %> <%=f.text_field :age%></li>
  <li><%= f.label :sex %> <%= f.text_field :sex %></li>
  <li><%= f.label :insurance %> <%= f.text_field :insurance %></li>
  <li><%= f.label :smoker %> <%= f.text_field :smoker %></li>
  <li><%= f.label :surgery %> <%= f.text_field :surgery %></li>
  <li><%= f.submit %></li>
<% end %>
</ul>
